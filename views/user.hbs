</a>
  
<hr align="center" width="100%">

 <h1>{{user.name}}</h1>  
 <h2 class="subt">{{user.group}}</h2>  
  
   
   <form action="" method="POST">
                <textarea name="comment" id="res" placeholder="What do you think about this hooman ?  Be gentle , Inappropriate messages may get removed "></textarea>
				                <button id="send" class="button1" name="send">Submit</button><br><br>

</form>

<hr align="center" width="100%">

 <h2 class="hdd">Feedbacks</h2>  
<table id="myTable">
  


		  {{#each comments}} 

								
					<tr>
            
            <td style="width:20%;"><span class="tblcl">{{datetime}}</span></td>
						<td id="{{id}}" style="width:80%;"><span class="tblcl">{{message}} </span></td>
 
					</tr> 
											


					
		{{/each}}


		
</table>

 
 <p style="padding:10px;" align="center" id="resp"> {{message}}</p>

